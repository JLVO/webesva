  buttonTextContato="Contáctanos"
  buttonLinkLlamada="LLámanos Ahora"
  linkwhatsapp="https://wa.me/51985834886?text=Hola%20ESVA%2C%20estoy%20interesado%20en%20sus%20servicios%20de%20seguridad.%20%C2%BFPodr%C3%ADan%20darme%20m%C3%A1s%20detalles%3F"
  textobotonwhatsapp="WhatsApp"/>


<section class="py-16 bg-[#e6f7f1] text-black">
  <div class="max-w-5xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-4">Sistemas de Seguridad Electrónica</h2>
