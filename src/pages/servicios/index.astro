    linkwhatsapp="https://wa.me/51985834886?text=Hola,%20deseo%20más%20información%20sobre%20los%20servicios%20de%20ESVA"/>


  <section class="py-16 bg-white text-black">
  <div class="max-w-5xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold mb-4">Nuestros Servicios Especializados</h2>
    <p class="text-lg mb-12 text-gray-700">
      Soluciones integrales en mantenimiento, reparación, redes y seguridad informática.
    </p>

    <div class="grid gap-10 md:grid-cols-2 text-left">
      
      {/* Servicio 1: Mantenimiento de Equipos */}
      <div class="bg-gray-50 p-6 rounded-2xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
        <a href="../servicios/mantenimiento-reparacion-informatica">
        <Wrench className="w-12 h-12 text-primary mb-4" aria-label="Mantenimiento de Equipos" />
        <h3 class="text-xl font-semibold mb-2">Mantenimiento de Equipos</h3>
        <ul class="list-disc list-inside text-gray-600 space-y-1">
          <li>Limpieza física y formateo</li>
          <li>Instalación de programas esenciales</li>
          <li>Revisión y diagnóstico de fallas</li>
        </ul>
        </a>
      </div>

      {/* Servicio 2: Redes e Internet */}
      <div class="bg-gray-50 p-6 rounded-2xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
        <a href="../servicios/redes-conectividad">
        <Network className="w-12 h-12 text-primary mb-4" aria-label="Redes e Internet" />
        <h3 class="text-xl font-semibold mb-2">Redes e Internet</h3>
        <ul class="list-disc list-inside text-gray-600 space-y-1">
          <li>Configuración de routers y redes</li>
          <li>Solución de problemas de conectividad</li>
          <li>Instalación de puntos de acceso Wi-Fi</li>
        </ul>
        </a>
      </div>

