      {/* Servicio 1: Cámaras de Seguridad */}
      <div class="bg-gray-50 p-6 rounded-2xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
        <Camera className="w-12 h-12 text-primary mb-4" aria-label="Cámaras de Seguridad" />
        <h3 class="text-xl font-semibold mb-2">Cámaras de Seguridad</h3>
        <ul class="list-disc list-inside text-gray-600 space-y-1">
          <li>Venta e instalación de CCTV IP y analógico</li>
          <li>Visualización remota desde celular o PC</li>
          <li>Grabación 24/7 con discos de alta capacidad</li>
        </ul>
      </div>

      {/* Servicio 2: Alarmas y Sensores */}
      <div class="bg-gray-50 p-6 rounded-2xl shadow-md hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
        <AlarmCheck className="w-12 h-12 text-primary mb-4" aria-label="Alarmas y Sensores" />
