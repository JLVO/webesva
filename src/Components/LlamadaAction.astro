---
const { title, subtitle, buttonTextContato, buttonLinkLlamada,linkwhatsapp,textobotonwhatsapp } = Astro.props;
import {
  MessageCircle,
  Phone,
  Mail,
} from "lucide-react";
---
<section class="bg-blue-950 py-16 px-6 text-center text-white">
  <div class="max-w-4xl mx-auto">
    
    <h2 class="text-2xl md:text-4xl font-bold mb-4">
     {title}
    </h2>
    <p class="text-lg md:text-xl mb-10">
      {subtitle}
    </p>

    <div class="flex flex-col md:flex-row justify-center gap-6">
      {/* Botón WhatsApp 1 */}
      <a
        href={linkwhatsapp}
        target="_blank"
        class="inline-flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-full text-lg font-medium transition duration-300"
      >
        <MessageCircle className="w-5 h-5" />
        {textobotonwhatsapp}
      </a>

      {/* Botón Llamada*/}
      <a
        href="tel:+51985834886"
        target="_blank"
        class="inline-flex items-center gap-2 bg-blue-900 hover:bg-blue-600 text-white px-6 py-3 rounded-full text-lg font-medium transition duration-300"
      >
        <Phone className="w-5 h-5" />
        {buttonLinkLlamada}
      </a>

      {/* Botón de contacto */}
      <a
        href="../contactanos"
        class="inline-flex items-center gap-2 bg-white hover:bg-gray-100 text-blue-700 px-6 py-3 rounded-full text-lg font-medium transition duration-300"
      >
        <Mail className="w-5 h-5"/>
        {buttonTextContato}
      </a>
    </div>
  </div>
</section>